{%
  set classes = [
    'block',
    'block-' ~ configuration.provider|clean_class,
    'block-' ~ plugin_id|clean_class,
    layout ? 'layout--' ~ layout|clean_class,
  ]
%}


<div{{attributes.addClass(classes)}}>
	{{ title_prefix }}
	{% if label %}
		<h2{{title_attributes.addClass('block__title')}}>{{ label }}</h2>
	{% endif %}
	{{ title_suffix }}

	{% block content %}

		<div class="service-container2">
			<div class="service2">
				<div class="contant">
					<h2>
						{{content.field_name}}
					</h2>
					<div class="text-dul">
						{{content.body}}
					</div>
					<div>
						<a class="read-more-btn backcolor" href={{content.field_btn[0]['#url']}}>{{content.field_btn[0]['#title']}}</a>
					</div>
				</div>
			</div>
		</div>


	{% endblock %}

</div>
